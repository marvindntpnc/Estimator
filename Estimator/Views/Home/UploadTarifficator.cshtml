@{
    ViewData["Title"] = "Загрузить";
}
<div id="loadingBlock" style="position: absolute;width: 100%;height: 100%; z-index: 9999;background-color: #ffffffcd;display: none; top: 0;left: 0;text-align: center">
    <img src="css/images/loading.gif" alt="loading" style="position: sticky;top: 45%">
</div>
<div class="card">
    <h1 class="card-title">Загрузить тарификатор</h1>
    <div class="text-center mt-3 row justify-content-center">
        <div class="col-md-4">
            <input type="file" accept=".xlsx" id="tariffFile">
        </div>
        <div class="col-md-1">
            <div class="form-check form-switch">
                <input class="form-check-input" type="checkbox" id="isFul" onclick="switchTarifficatorType()">
                <label class="form-check-label" for="isFul" id="tarifficatorType">ФУЛ</label>
            </div>
        </div>
        @* <input type="checkbox" id="isFul" onclick="switchTarifficatorType()"> *@
        @* <p id="tarifficatorType">ФУЛ</p> *@
    </div>
    <div class="row">
        <div class="col-md-4 offset-6 mt-5">
            <button class="btn btn-primary" type="button" id="downloadBtn">Загрузить</button>
        </div>
    </div>

    <div class="modal fade" id="successUploadModal" tabindex="-1" aria-labelledby="successUploadModal" aria-hidden="true">
        <div class="modal-dialog" style="max-width: 85%">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Тарификатор сохранен!</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="accordion" id="accordionCompare">
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                    Добавлено
                                </button>
                            </h2>
                            <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div className="successModalBlock" id="addedBlock"></div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                    Удалено
                                </button>
                            </h2>
                            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div className="successModalBlock" id="removedBlock"></div>
                                </div>
                            </div>
                        </div>
                        <div class="accordion-item">
                            <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Измененно
                                </button>
                            </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                                <div class="accordion-body">
                                    <div className="successModalBlock" id="updatedBlock"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div className="successModalBlock" id="duplicatesBlock"></div>
                </div>
            </div>
        </div>
    </div>
</div>